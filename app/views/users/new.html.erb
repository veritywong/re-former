  <%= form_with model: @user do |f| %>
    <%= render partial: 'shared/errors_messages', object: @user %>

    <%= f.label :username, "Your Username Here:" %><br>
    <%= f.text_field :username, placeholder: "username"%><br><br>

    <%= f.label :email %><br>
    <%= f.email_field :email, placeholder: "example@email.com" %><br><br>

    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: "password"%><br><br>

    <%= f.submit %>
  <% end %>

  <% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value %>
    </div>
  <% end %>
