<div class="main-container">
  <h1>Edit form</h1>

  <%= form_with(model: @user, url: user_path(@user), method: "patch") do |f| %>
    <%= render partial: 'shared/errors_messages', object: @user %>
    
    <%= f.label :username, "Edit Username:" %><br>
    <%= f.text_field :username, placeholder: "username"%><br><br>

    <%= f.label :email %><br>
    <%= f.email_field :email, placeholder: "email@example.com" %><br><br>

    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: "password"%><br><br>

    <%= f.submit "Update" %>
  <% end %>


</div>